<div class="container-ok">
<%= render "components/header" %>

<!--Carousel Wrapper-->
<div class="img-back-blanc"><%= link_to(image_tag("back.png", alt: "QQ29 - all rights reserved."), root_path) %></div>
<div id="carousel-example-1z" class="carousel slide carousel-fade carousel-bottom" data-ride="carousel">

  <!--Indicators-->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-1z" data-slide-to="1"></li>
    <li data-target="#carousel-example-1z" data-slide-to="2"></li>
  </ol>
  <!--/.Indicators-->
  <!--Slides-->
  <div class="carousel-inner" role="listbox">

    <!--First slide-->

    <div class="carousel-item active ">

      <div><div class="overlay"></div></div>
      <img class="d-block w-100 img-diapo" src="https://res.cloudinary.com/dhvdnppdx/image/upload/v1619029599/176054991_2152320041576613_3586694807043505794_n_u8fone.jpg"
        alt="First slide">
        <div class=" card-trip-infos-deux">

        <h2>Âge d'Or</h2>
        <h3>RPZ</h3>
        <h3>20 - 27 Mai 2021</h3>
        <p><i>Exposition</i></p>


      </div>
    </div>
    <!--/First slide-->
    <!--Second slide-->

  </div>
  <!--/.Slides-->
  <!--Controls-->
  <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
  <!--/.Controls-->
</div>

<% if user_signed_in? %>
<div class="flex-admin-deux"><%= link_to "Ajouter un article", new_article_path %></div>
<% end %>

<div class="display-grid-card">
  <% @article.each do |article| %>
    <div class="card-trip">
      <% if user_signed_in? %>
        <div class ="flex-admin">
          <%= link_to 'Supprimer', article_path(article),
            method: :delete,
            data: { confirm: 'Êtes-vous certain de vouloir supprimer?' } %>
          <%= link_to "Editer", edit_article_path(article.id)%>
        </div>
      <% end %>
          <%= image_tag("#{article.image_url_2}") %>
        <div class="card-trip-infos">
          <div>
            <h2><%= article.title %></h2>
            <h3><%= article.sous_titre %></h3>
            <p><%= article.lieu %></p>
          </div>
          <div class="card-trip-plus">
            <h4 class="card-trip-pricing"><%= article.date %></h4>
            <div class="btn-desk"><%= link_to "En savoir plus", article_path(article.id)%></div>
            <div class="btn-resp"><%= link_to "+", article_path(article.id)%></div>
            </div>
        </div>

    </div>
  <% end %>
</div>

<%= render "components/footer" %>

</div>
